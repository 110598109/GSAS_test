<div class="thumbnail">
    <% if product.image_path && File.file?(product.image_path) %>
        <%= image_tag product.image_path %>
    <% end %>
    <div class="caption">
        <h3> <%= "#{product.name} #{product.id}" %></h3>
        <p> <%= "產品編號：#{index + 1}" %></p>
        <p>
            <%= link_to 'Edit', edit_product_path(product), class:'btn btn-primary' %>
            <a href="#" class="btn btn-default" role="button">Button</a>
        </p>
    </div>
</div>